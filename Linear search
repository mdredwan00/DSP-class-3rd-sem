#include<bits/stdc++.h>
using namespace std;

int linearSearch(int array[], int s, int v){
    for(int i = 0 ; i < s; i++){
        if(array[i] == v){
            cout << "Element found at index " << i << endl;
            return i;
        }
    }
    cout << "The element is not in this array" << endl;
    return -1;
}

int main(){
    int arr[] = {1,2,3,4,5,6,7,8,9};
    int arrSize = sizeof(arr)/sizeof(arr[0]);
    int value;
    cout<<"Enter the value:;
    cin>>value;

    linearSearch(arr, arrSize, value);
}
